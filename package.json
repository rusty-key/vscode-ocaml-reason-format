{
  "name": "vscode-ocaml-reason-format",
  "displayName": "vscode-ocaml-reason-format",
  "author": "Rusty Key <mail@stfoo.ru> (https://github.com/rusty-key)",
  "publisher": "rustykey",
  "description": "Formatters for OCaml and Reason code",
  "repository": {
    "type": "git",
    "url": "git@github.com:rusty-key/vscode-ocaml-reason-format.git"
  },
  "version": "0.0.5",
  "engines": {
    "vscode": "^1.31.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:ocaml",
    "onLanguage:reason"
  ],
  "main": "./out/bundle.js",
  "contributes": {
    "languages": [
      {
        "id": "ocaml",
        "aliases": [
          "OCaml"
        ],
        "extensions": [
          ".ml",
          ".mli"
        ]
      },
      {
        "id": "reason",
        "aliases": [
          "Reason"
        ],
        "extensions": [
          ".re",
          ".rei"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Formatter configuration",
      "properties": {
        "ocaml-reason-format.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Whether or not this plugin should be used for formatting"
        },
        "ocaml-reason-format.ocamlformat": {
          "type": "string",
          "default": "ocamlformat",
          "description": "The path to the `ocamlformat` binary."
        },
        "ocaml-reason-format.refmt": {
          "type": "string",
          "default": "refmt",
          "description": "The path to the `refmt` binary."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/bundle.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test-compile": "tsc -p ./",
    "test": "yarn run test-compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.12.21",
    "@types/uuid": "^8.3.3",
    "esbuild": "^0.14.27",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "uuid": "^8.3.2",
    "vscode": "^1.1.28"
  }
}
